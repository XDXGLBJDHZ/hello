<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>
    <constant name="struts.devMode" value="false"/>

    <package name="default" namespace="/" extends="struts-default">
        <global-allowed-methods>regex:.*</global-allowed-methods>
        <action name="sayHi" class="cap.action.HelloWorldAction">
            <!--result标签配置方法的返回值-->
            <result name="success">/result.jsp</result>
        </action>
        <action name="sayHello" class="cap.action.HelloWorldAction" method="login">
            <!--result标签配置方法的返回值-->
            <result name="success">/output.jsp</result>
        </action>
        <!--通配符写法（struts2.5）-->
        <action name="say_*" class="cap.action.HelloWorldAction" method="{1}" converter="allowed-method">
            <result name="success">/output.jsp</result>
            <result name="success">/result.jsp</result>
        </action>
    </package>
</struts>
